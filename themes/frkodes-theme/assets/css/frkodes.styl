@import 'nib'

body
	background transparent url(../images/iphone-big.jpg) no-repeat 50% 50%
	background-attachment fixed
	background-size cover
	.bg_gray
		border-top 1px dotted gray
		border-bottom 1px dotted gray
	.bg_blue
		border-top 1px dotted blue
		border-bottom 1px dotted blue
	#layout-content
		padding-top 50px
		figure
			position relative
			z-index 2
			img
				border-radius 50%
		.header-banner
			background transparent url(../images/spot-pattern.png) repeat left top
			height 400px
			overflow hidden
			h1
				color white
				display block
				background rgba(black, .8)
				font-size 3.4em
				font-style italic
				width auto
				padding 1em
		.about-block
			position relative
			background white
			figure
				margin-top -100px
				opacity 1
				animation frkodesImage 1.5s
				img
					border 10px solid rgba(black, .9)
			p
				font-size 2em
				padding 2em 0
				a
					font-style italic
		.work-block
			background white
			.row
				margin-bottom 30px
				.block-container
					height 220px
					overflow hidden
					figure
						overflow hidden
						height 220px
						img
							width 100%
							border-radius 0
					&:hover .info
						margin-top -60px
						cursor pointer
						transition margin-top 0.1s
					.info
						width 100%
						height 60px
						float left
						background rgba(black, .8)
						position relative
						margin-top 0px
						z-index 2
						transition margin-top 0.1s
						ul
							list-style none
							li
								width 50%
								height 100%
								display inline-block
								float left
								a
									color white
									line-height 60px
		.contact-block
			text-align center
			background transparent url(../images/wacom.jpg) no-repeat 50% 50%
			background-attachment fixed
			background-size cover
			color white
			text-shadow 0px 0px 40px rgba(black,0.7)
			h2
				font-size 5em
				font-weight bolder
				color black
				// background rgba(black, .7)
				width 200px
				padding 20px 0
				margin 30px auto 0 auto
			h3
				font-weight bolder
				font-size 4em
			p
				color white
				font-weight bolder
				a
					font-size 3em
					color white
		.last-block
			background white
	.social
		list-style none
		text-align center
		margin -145px 0 100px 0
		li:first-of-type
			margin-left -20px
		li
			display inline-block
			width 50px
			height 50px
			position relative
			z-index 10
			background white
			border-radius 50%
			margin 0 20px
			animation frkodesSocial 6.5s ease
			font-size 3.6em
			opacity 1
			transition opacity 1s
			&:hover
				opacity .5
				transition opacity 1s
			&.tw
				margin-right 150px
			&.em
				margin-left 150px
			a
				display block
				width 100%
				height 100%
				color black
				&:hover
					text-decoration none
	#layout-footer
		background white
		height 120px
		padding-top 20px
		.social
			margin 0 0 10px 0
			li:first-of-type
				margin-left 0
			li
				margin 0 20px
				animation frkodesSocial 6.5s ease
				font-size 3.6em
				opacity 1
				transition opacity 1s
				&:hover
					opacity .5
					transition opacity 1s
				a
					display block
					width 100%
					height 100%
					color black
					&:hover
						text-decoration none

@keyframes frkodesImage
	from
		margin-top 0
		opacity 0
	to
		margin-top -100px
		opcaity 1

@keyframes frkodesSocial
	from
		opacity 0
	to
		opacity 1